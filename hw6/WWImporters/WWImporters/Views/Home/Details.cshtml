@model WWImporters.Models.ViewModel.DashboardVM

@{
    ViewBag.Title = "Details";
}

<br />
<br />

@*Displays Person information*@
<div class="container">
    <div class="row">
        <div class="col-sm-6 details-box">
            <h2>@Html.DisplayFor(model => model.Person.FullName)</h2>
            <hr style="border-color: black;" />
            <dl class="dl-horizontal">
                <dt>
                    Preferred name:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Person.PreferredName)
                </dd>

                <dt>
                    Phone:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Person.PhoneNumber)
                </dd>

                <dt>
                    Fax:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Person.FaxNumber)
                </dd>

                <dt>
                    E-mail:
                </dt>
                <dd>
                    <a href="mailto:@Html.DisplayFor(model => model.Person.EmailAddress)">@Html.DisplayFor(model => model.Person.EmailAddress)</a>
                </dd>

                <dt>
                    Member since:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Person.ValidFrom)
                </dd>
            </dl>
        </div>

        @*Profile photo placeholder*@
        <div class="col-sm-6">
            <img src="https://via.placeholder.com/225?text=Photo" alt="Profile photo" class="center-block"/>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-6 details-box">
            <h2>Company Profile</h2>
            <hr style="border-color: black;" />
            <dl class="dl-horizontal">
                <dt>
                    Company name:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Customer.CustomerName)
                </dd>

                <dt>
                    Phone:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Customer.PhoneNumber)
                </dd>

                <dt>
                    Fax:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Customer.FaxNumber)
                </dd>

                <dt>
                    Website:
                </dt>
                <dd>
                    <a href="@Html.DisplayFor(model => model.Customer.WebsiteURL)">@Html.DisplayFor(model => model.Customer.WebsiteURL)</a>
                </dd>

                <dt>
                    Member since:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Customer.ValidFrom)
                </dd>
            </dl>
        </div>
    </div>
</div>
